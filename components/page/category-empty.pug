extends ../../layout.pug
block style
    link(rel="stylesheet", href="../../all.css")
block content
    include ../nav/index.pug
    .clear(style=" height: 100%; box-sizing: border-box; padding-top: 60px; margin-top: -60px;")
        .left(style="width: 100%; height: 100%; overflow: auto")
            div(style="margin-left: 200px; padding: 20px; height: 100%; box-sizing: border-box")
                .clear(style="margin: 0 -20px; padding: 0 20px; padding-bottom: 20px; box-shadow: 0 2px 5px rgba(0,0,0,.2);")
                    .left
                        .title 所有分类
                    .right
                        button.btn(modal="newCategory") 新建分类
                .v-wrapper(style="padding: 20px; box-sizing: border-box; height: 90%;")
                    .v-floater(style="margin-bottom: -60px;")
                    .v-content(style="padding-top: 20px; text-align: center;")
                        .info(style="margin-bottom: 20px;") 您还没有分类内容，请先新建一个分类
                        //- button.btn(modal="newCategory") 新建分类
        .left(style="margin-left: -100%; height: 100%;")
            include ../menu/index.pug
